<h2>Make an appointment</h2>
<p>You can make an appointment on this webpage</p>

<script type="text/javascript">
$( function() { 
  $('#qqq').simplecolorpicker();
  $('#datetimepicker').datetimepicker(); 
  } )
</script>

<form action="/visit" method="POST" role="form">
  
    <div class="form-group">
      <label>Your name</label>
      <input id="bbb" name="client[name]" type="text" class="form-control" placeholder="Your name" value="<%= @c.name %>">
    </div>

    <div class="form-group">
    <label>Your phone</label>
    <input name="client[phone]" type="text" class="form-control ccc" placeholder="Your phone" value="<%= @c.phone %>">
    </div>

    <div class="form-group">
      <label>Your date and time</label>
      <input id="datetimepicker" name="client[datestamp]" type="text" class="form-control ccc" placeholder="Your date" value="<%= @c.datestamp %>">
    </div>
    
    <div class="form-group">
      <label>Your barber</label>
      <select name="client[barber]" class="form-control">

        <% @barbers.each do |item| %>
          <option <%= @barber == item.name %>><%= item.name %></option>
        <% end %>  

      </select>
    </div>
    
    <div class="form-group">
      <label>Your color of nation: </label>
      <select name="client[color]" id="qqq">
        <option value="#7bd148">Green</option>
        <option value="#5484ed">Bold blue</option>
        <option value="#a4bdfc">Blue</option>
        <option value="#46d6db">Turquoise</option>
        <option value="#7ae7bf">Light green</option>
        <option value="#51b749">Bold green</option>
        <option value="#fbd75b">Yellow</option>
        <option value="#ffb878">Orange</option>
        <option value="#ff887c">Red</option>
        <option value="#dc2127">Bold red</option>
        <option value="#dbadff">Purple</option>
        <option value="#e1e1e1">Gray</option>
      </select>
    </div>
      
    <button class="btn btn-primary" type="submit">Submit</button>
</form>